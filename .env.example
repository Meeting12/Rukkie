# Copy this file to `.env` and fill values for deployment.
# Never commit real secrets.

# Core Django
DEBUG=False
SERVE_MEDIA=False
LOG_LEVEL=INFO
STORE_METADATA_ASYNC=True
STORE_USE_EXTERNAL_VISION=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Media storage (Cloudinary for uploads)
USE_CLOUDINARY_MEDIA=True
# Preferred single variable:
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
# Optional explicit variables:
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
# CLOUDINARY_SECURE=True

# Database (required when DEBUG=False)
DATABASE_URL=postgresql://user:password@db:5432/rukkie

# Email (SMTP production profile)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_TIMEOUT=10
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=supersecret
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com
CONTACT_RECIPIENT_EMAIL=support@yourdomain.com
EMAIL_USE_CONSOLE=False

# Stripe
# Accepted secret names: STRIPE_SECRET_KEY, STRIPE_API_KEY
# Accepted publishable names: STRIPE_PUBLISHABLE_KEY, STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_MODE=LIVE
# Accepted webhook names: STRIPE_WEBHOOK_SECRET, STRIPE_ENDPOINT_SECRET
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Flutterwave
# Accepted secret names: FLUTTERWAVE_SECRET_KEY, FLW_SECRET_KEY, FLW_SECRET, FLUTTERWAVE_SECRET, RAVE_SECRET_KEY
FLUTTERWAVE_SECRET_KEY=FLWSECK_LIVE-xxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_MODE=LIVE
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/v3
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_LIVE-xxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_ENCRYPTION_KEY=xxxxxxxxxxxxxxxx
FLUTTERWAVE_WEBHOOK_SECRET=replace_me
# Optional backward aliases
# FLUTTERWAVE_SECRET_HASH=

# PayPal
PAYPAL_CLIENT_ID=replace_me
PAYPAL_CLIENT_SECRET=replace_me
PAYPAL_ENV=live
PAYPAL_WEBHOOK_ID=replace_me
# Optional backward aliases
# PAYPAL_SECRET=
# PAYPAL_MODE=live

# Required for /api/payments/verify/
PAYMENT_VERIFY_TOKEN=replace_with_strong_random_token

# Checkout pricing (server-side authority)
CHECKOUT_FREE_SHIPPING_THRESHOLD=100
CHECKOUT_FLAT_SHIPPING=9.99
CHECKOUT_TAX_RATE=0.08

# Request/upload limits
REQUEST_BODY_MAX_BYTES=2097152
CSV_IMPORT_MAX_BYTES=209715200
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760

# API rate limits (set any LIMIT to 0 to disable that limiter)
RATE_LIMIT_CHAT_LIMIT=45
RATE_LIMIT_CHAT_WINDOW_SECONDS=60
RATE_LIMIT_CONTACT_LIMIT=8
RATE_LIMIT_CONTACT_WINDOW_SECONDS=300
RATE_LIMIT_NEWSLETTER_LIMIT=10
RATE_LIMIT_NEWSLETTER_WINDOW_SECONDS=300
RATE_LIMIT_AUTH_REGISTER_LIMIT=8
RATE_LIMIT_AUTH_REGISTER_WINDOW_SECONDS=600
RATE_LIMIT_AUTH_LOGIN_LIMIT=12
RATE_LIMIT_AUTH_LOGIN_WINDOW_SECONDS=300
RATE_LIMIT_PAYPAL_CREATE_ORDER_LIMIT=40
RATE_LIMIT_PAYPAL_CREATE_ORDER_WINDOW_SECONDS=60
RATE_LIMIT_PAYPAL_CAPTURE_ORDER_LIMIT=40
RATE_LIMIT_PAYPAL_CAPTURE_ORDER_WINDOW_SECONDS=60
RATE_LIMIT_PAYPAL_WEBHOOK_LIMIT=180
RATE_LIMIT_PAYPAL_WEBHOOK_WINDOW_SECONDS=60

# Optional observability
SENTRY_DSN=
